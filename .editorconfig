# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# Note: Some settings cannot be enforced via .editorconfig, and are therefore
# set in .vscode/settings.json:
#"files.trimFinalNewlines": true,


[*.cs]

# C# code style preferences
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true
dotnet_style_require_accessibility_modifiers = always:suggestion
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# New line preferences
csharp_new_line_before_open_brace = all
csharp_new_line_between_query_expression_clauses = true

# Formatting preferences
csharp_indent_case_contents = true
csharp_indent_labels = no_change
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_cast = false
csharp_preserve_single_line_statements = false
csharp_preserve_single_line_blocks = true

# Naming conventions
dotnet_naming_rule.private_fields_should_be_camel_case.severity = suggestion
dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_case_style
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_style.camel_case_style.capitalization = camel_case
dotnet_naming_style.camel_case_style.required_prefix = _

# ------------------------------------------------------------------------
# StyleCop.Analyzers adjustments (keep StyleCop installed but not militant)
# ------------------------------------------------------------------------
# TODO: Consider re-enabling some of these rules later

# Disable XML documentation requirements
dotnet_diagnostic.SA1600.severity = none
dotnet_diagnostic.SA1601.severity = none
dotnet_diagnostic.SA1602.severity = none
dotnet_diagnostic.SA1611.severity = none
dotnet_diagnostic.SA1615.severity = none
dotnet_diagnostic.SA1633.severity = none

# Disable overly strict layout and style rules
dotnet_diagnostic.SA1309.severity = none  # underscores in fields OK
dotnet_diagnostic.SA1101.severity = none  # no 'this.' prefix needed
dotnet_diagnostic.SA1201.severity = none  # constructor position
dotnet_diagnostic.SA1503.severity = none  # allow braces omission
dotnet_diagnostic.SA1516.severity = none  # allow adjacent elements
dotnet_diagnostic.SA1413.severity = none  # trailing commas
dotnet_diagnostic.SA1000.severity = none  # spacing after 'new'
dotnet_diagnostic.SA1009.severity = none  # parentheses spacing
dotnet_diagnostic.SA1513.severity = none  # blank line after brace
dotnet_diagnostic.SA1507.severity = none  # multiple blank lines
dotnet_diagnostic.SA1502.severity = none  # single-line elements
dotnet_diagnostic.SA1110.severity = none
dotnet_diagnostic.SA1111.severity = none
dotnet_diagnostic.SA1118.severity = none
dotnet_diagnostic.SA1313.severity = none  # parameter casing
dotnet_diagnostic.SA1413.severity = none  # trailing comma rule

# Reduce noise: treat remaining StyleCop warnings as info
# dotnet_analyzer_diagnostic.severity = suggestion


[*.csproj]
indent_size = 2


[*.{json,yaml,yml,xml}]
indent_size = 2


[*.md]
trim_trailing_whitespace = false
